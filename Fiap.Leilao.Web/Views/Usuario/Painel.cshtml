@model Fiap.Leilao.Web.ViewModels.DashGenericoViewModel
@{
    ViewBag.Title = "Painel";
}

@MeuHelper.Titulo("Painel do Usuário")

<div class="row">
    <div class="col-md-12 col-sm-12">
        @Html.ActionLink("Vender Produtos", "Vender", "Vender", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Comprar Produtos", "Dashboard", "Comprar", null, new { @class = "btn btn-primary" })
        
    </div>
</div>

@MeuHelper.SubTitulo("Produtos em Venda")

<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="_tabelaVendas">
                @Html.Partial("_tabelaVendas", Model.ProdutosEmVenda)
            </tbody>
        </table>
    </div>
</div>
