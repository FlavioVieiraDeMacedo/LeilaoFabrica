
@{
    ViewBag.Title = "Painel";
}

@MeuHelper.Titulo("Painel do Usuário")

<div class="row">
    <div class="col-md-12 col-sm-12">
        @Html.ActionLink("Vender Produtos", "Vender", "Vender", null, new { @class="btn btn-primary" })
        <button class="btn btn success" id="btnComprar">Comprar</button>
    </div>
</div>

@MeuHelper.SubTitulo("Produtos em Venda")

<div class="row">
    <div class="col-md-12 col-sm-12">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="_tabelaVendas">
                @Html.Partial("tabelaVendas")
            </tbody>
        </table>
    </div>
</div>
