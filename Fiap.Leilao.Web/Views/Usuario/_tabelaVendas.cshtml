@model List<Fiap.Leilao.Web.Models.Negociacao>

@foreach (var item in Model)
{
    <tr>
        <td>
            <img src=@item.Produto.Imagem class="img-thumbnail" alt=@item.Produto.Imagem width="100" height="50">
        </td>
        <td>@item.Produto.Nome</td>
        <td>@item.Valor_Vendedor</td>
        <td>
        @if (item.Status == "Aguardando Resposta")
        { 
            <button  onclick="proposta.innerHTML='A proposta foi de: R$'+@item.Valor_Produto ,negociacaoId.value = @item.Id ,negociacao2Id.value = @item.Id" type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
                Ver Proposta
            </button>
        }
        else
        {
            @item.Status
        }
        </td>
        
    </tr>
}