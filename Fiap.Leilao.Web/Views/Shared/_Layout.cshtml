    <div class="cadastrotopo">@RenderSection("cadastrotopo", false)</div>
    <div class="login-layout">@RenderSection("login", false)</div>
    <div class="header-layout">@RenderSection("topo", false)</div>
    <div class="busca-layout">@RenderSection("busca", false)</div>


    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <div class="vantagens-layout">@RenderSection("vantagens", false)</div>
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - Grupo do Fábrica de Desenvolvedores</p>
    </footer>
    <script src="~/scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>