    <nav class="nav">
        <div class="container">
            <img src="~/Content/imagens/leilon.png">

            <ul>
                <li>@Html.ActionLink("Home", "Dashboard", "Usuario", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Comprar", "Dashboard", "Comprar", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Vender", "Dashboard", "Vender", new { area = "" }, new { @class = "navbar-brand" })</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@User.Identity.Name</li>
                    <li>
                        @Html.ActionLink("LogOut", "LogOut", "User", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    
                }
                else
                {
                    <li>
                        @Html.ActionLink("LogIn", "LogIn", "User", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                                    <li>
                                        @Html.ActionLink("Registrar-se", "Register", "User", new { area = "" }, new { @class = "navbar-brand" })
                                    </li>
                }
            </ul>
        </div>
